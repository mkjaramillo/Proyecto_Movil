<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".AnunciarFragment"
    android:padding="15dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tituloA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/anuncio"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/descripcionA"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:drawablePadding="10dp"
        android:text="@string/anuncio_descripcion"
        app:layout_constraintTop_toBottomOf="@+id/tituloA"
        tools:layout_editor_absoluteX="13dp" />

    <ListView
        android:id="@+id/listaa"
        android:layout_width="match_parent"
        android:layout_height="683dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descripcionA"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>